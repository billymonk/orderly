<div class="flex flex-col md:flex-row min-h-screen" data-controller="drag-and-drop">
  <!-- Left Column for Tasks -->
  <div class="w-full md:w-1/3 bg-blue-50 p-4 border-r border-blue-200">
    <h1 class="text-2xl font-bold mb-4 text-indigo-600">Tasks</h1>
    <div id="tasks" class="space-y-4">
      <% @tasks.each do |task| %>
        <div class="bg-white p-3 rounded-lg shadow-sm border border-indigo-400" draggable="true" data-drag-and-drop-target="draggable" data-drag-and-drop-task-id="<%= task.id %>" data-action="dragstart->drag-and-drop#dragstart dragend->drag-and-drop#dragend">
          <%= render "timeslots/task", task: task %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Right Column for Timeslots -->
  <div class="w-full md:w-2/3 bg-blue-100 p-4">
    <h1 class="text-2xl font-bold mb-4 text-indigo-600">Timeslots</h1>
    <div id="timeslots" class="space-y-4">
      <% @timeslots.each do |timeslot| %>
        <div class="bg-blue-200 p-3 rounded-lg shadow-sm border border-indigo-400" data-drag-and-drop-target="dropzone" data-action="dragover->drag-and-drop#dragover drop->drag-and-drop#drop">
          <%= render timeslot %>
        </div>
      <% end %>
    </div>
  </div>
</div>